\ProvidesPackage{comandos}

% =================================================
% BORDA
% -------------------------------------------------
% Argumentos: 
% 1) Width (optional)
%
% Exemplo:
%
% \borda[4cm]{
%   content
% }
%
% =================================================
\NewDocumentCommand{\borda}{om}
 {
    \IfValueTF{#1}
        {
            \begin{tcolorbox}[
                width=#1,
                top=5pt,
                bottom=2pt,
                left=0pt,
                right=0pt,
                middle=5pt,
                arc=0pt,
                boxsep=5pt,
                boxrule=0.5pt,
                colback=white,
                colframe=gray
            ]
                \centering
                #2
            \end{tcolorbox}
        }{
            \begin{tcolorbox}[
                hbox,
                top=5pt,
                bottom=2pt,
                left=0pt,
                right=0pt,
                middle=5pt,
                arc=0pt,
                boxsep=5pt,
                boxrule=0.5pt,
                colback=white,
                colframe=gray
            ]
                \centering
                #2
            \end{tcolorbox}
        }
 }


% =================================================
% IMAGEM
% -------------------------------------------------
% Argumentos: 
% 1) Label
% 2) Path
% 3) Size (width or height)
% 4) Caption
% 5) Citation
%
% Exemplo:
%
% \figura[p. 1]
%    {fig:label} % Label
%    {imagens/caminho/imagem_sem_extensao} % Path
%    {width=0.5\linewidth} % Size
%    {Exemplo de uso do comando 'imagem'} % Caption
%    {autor-1999-titulo-livro} % Citation
%
% =================================================
\newcommand{\figura}[6][] {
    \begin{figure}[ht!]
        \centering
        \caption{\textmd{#5}}
        \borda{
            \includegraphics[#4]{#3}
        }
        \nomefonte[#1]{#6}
        \label{#2}
    \end{figure}
}


% =================================================
% FONTE
% -------------------------------------------------
% Argumentos: 
% 1) Citation
%
% Exemplo:
%
% \nomefonte[p. 1]
%    {autor-1999-titulo-livro} % Citation
%
% =================================================
\newcommand{\nomefonte}[2][] {
    \ifthenelse{\equal{#2}{}}{
        % Sem citação:
        \par\medskip\ABNTEXfontereduzida\selectfont\textbf{Fonte:} Elaborado pelo autor. \par\medskip
    }{
        % Com citação:
        \par\medskip\ABNTEXfontereduzida\selectfont\textbf{Fonte:} \citeonline[#1]{#2} \par\medskip
    }
}
