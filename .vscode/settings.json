{
    "cSpell.enableFiletypes": [
        "tex"
    ],
    "cSpell.ignorePaths": [
        "*.sty"
    ],
    "cSpell.useGitignore": true,
    "cSpell.language": "en,pt-BR",
    "cSpell.ignoreWords": [
        "Meirelles",
        "Sarvat"
    ],
    "cSpell.words": [
        "adequem",
        "Casterline",
        "concatenativos",
        "Croneberg",
        "Gallaudet",
        "handshape",
        "Stokoe"
    ],
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "XXX",
        "[ ]",
        "[x]",
        "% TODO"
    ],
    "editor.wordWrap": "on"
}